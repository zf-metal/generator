<script type="text/javascript">
    function changetype() {
        var types = $("[name='type'").val();

        if (types == "file") {
            $("#form-group-File").show();
            $("[name='absolutepath']").parent().parent().parent().show();
            $("[name='webpath']").parent().parent().parent().show();
        } else {
            $("#form-group-File").hide();
            $("[name='absolutepath']").parent().parent().parent().hide();
            $("[name='webpath']").parent().parent().parent().hide();
        }

        if (types == "oneToOne" || types == "manyToOne" || types == "oneToMany") {
            $("[name='length']").parent().parent().parent().hide();
            $("[name='relatedEntity']").parent().parent().parent().show();
        } else {

            $("[name='length']").parent().parent().parent().show();
            $("[name='relatedEntity']").parent().parent().parent().hide();
        }

    }

    changetype();

</script>

